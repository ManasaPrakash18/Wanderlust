<% layout("/layouts/boilerplate.ejs") %>
<script>
    const mapToken = "<%=process.env.MAP_TOKEN %>";
    let listing = <%- JSON.stringify(listing) %>; 
</script>
    <div class="row">

        <div class="col-8 offset-2" >

            <h2><%= listing.title %></h2>
            
            <div class="card list-card" style="width: 100%;">

                <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %> image" >
                <div class="card-body show">
                    <h4 class="fst-italic text-muted">Owned By : <%= listing.owner.username %></h4>
                    <p><%= listing.description %><br></p>
                    <p>Price: &#8377; <%= listing.price.toLocaleString("en-IN") %> <br></p>
                    <p>Location : <%= listing.location %> <br></p>
                    <p>Country : <%= listing.country %> <br><br></p>

                    <% if(user && listing.owner.equals(user._id)) { %>
                    <div>
                        <a href="/listings/<%=listing._id%>/edit" class="btn bnb-btn btn-dark">Edit</a>

                        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display: inline;">
                            <button type="submit" class="bnb-btn btn dlt btn-dark"><i class="fa-solid fa-trash-can"></i></button>
                        </form>
                    </div>
                    <% } %>
                </div>
            </div>

            <hr>
          <% if(user){%>
       <div class=" mb-5 mt-5">
        <h4>Leave a review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs_validation">
            <div class="mb-3 mt-3 ">
                <fieldset class="starability-growRotate">
                    <legend>Rating:</legend>
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            
            <div class="mb-3 mt-3">
                <br>
                <label for="comment" class="form-label"><legend>Comment:</legend></label>
                <textarea type="text" name="review[comment]" id="comment" placeholder="Write your review here"  cols="80" rows="4" required class="form-control "></textarea>
            </div>
            <div class="invalid-feedback">Please add a valid review</div>
            <button class="btn btn-dark">Submit</button>
            <br>
            <hr>
        </form>
       </div>
         <% } %>


        <% if(listing.reviews.length>0) {%> 
        <div class="row mt-5 mb-5">
        <h4>Reviews</h4>
        <!-- <% if(listing.reviews.length === 0){ %>
            <p class="text-center fst-italic">No reviews yet</p>
        <% } %> -->
            <% for(let review of listing.reviews) { %> 
                <div class="card col-5 m-2 p-2 ">
                    <div class="card-body">
                    <div class="card-title d-flex justify-content-between">
                        <div class="name text-decoration-underline">@<%= review.author ? review.author.username : "Anonymous"  %></div>
                        <% if (user && review.author && user.equals(review.author)) { %>
                        <div class="form">
                            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                                <button class="btn btn-sm"><i class="fa-solid fa-trash-can"></i></button>
                            </form>
                        </div>
                        <% } %>
                    </div>
                    <div class="card-text px-2">
                        <p class="starability-result card-text" data-rating="<%= review.rating %>">  <br></p>
                        <p class="card-text"><%= review.comment %> <br></p>
                    </div>
                </div>
                </div>
            <% } %>
       </div>
       <% } %>
       </div>

       <div class="col-8 offset-2">
        <h3>Where you'll be</h3>
       <div id="map" ></div>
       </div>

       
       
    </div>


<script src="/js/map.js"></script>