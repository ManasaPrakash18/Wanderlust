<% layout("/layouts/boilerplate.ejs") %>

<body>
    <div class="row">

        <div class="col-8 offset-2" >

            <h2><%= listing.title %></h2>
            
            <div class="card list-card" style="width: 100%;">

                <img src="<%= listing.image %>" class="card-img-top" alt="<%= listing.title %> image" >
                <div class="card-body show">
                    <h4 class="fst-italic text-muted">Owned By : <%= listing.owner.username %></h4>
                    <p><%= listing.description %><br></p>
                    <p>Price: &#8377; <%= listing.price.toLocaleString("en-IN") %> <br></p>
                    <p>Location : <%= listing.location %> <br></p>
                    <p>Country : <%= listing.country %> <br><br></p>

                    <% if(user && user._id.equals(listing.owner._id)) { %>
                    <div>
                        <a href="/listings/<%=listing._id%>/edit" class="btn bnb-btn btn-dark">Edit</a>

                        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display: inline;">
                            <button type="submit" class="bnb-btn btn dlt btn-dark"><i class="fa-solid fa-trash-can"></i></button>
                        </form>
                    </div>
                    <% } %>
                </div>
            </div>

            <hr>
          <% if(user){%>
       <div class=" mb-5 mt-5">
        <h4>Leave a review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs_validation">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" name="review[rating]" id="rating" min="1" max="5" step="1" value="5" required class="form-range">
            </div>
            
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea type="text" name="review[comment]" id="comment" placeholder="Write your review here"  cols="80" rows="4" required class="form-control "></textarea>
            </div>
            <div class="invalid-feedback">Please add a valid review</div>
            <button class="btn btn-dark">Submit</button>
        </form>
       </div>
         <% } %>
       

        <div class="row mt-5 mb-5">
        <h4>Reviews</h4>
        <% if(listing.reviews.length === 0){ %>
            <p class="text-center fst-italic">No reviews yet</p>
        <% } %>
            <% for(let review of listing.reviews) { %> 
                <div class="card col-5 m-2 p-2 ">
                    <div class="card-body">
                    <div class="card-title d-flex justify-content-between">
                        <div class="name text-decoration-underline">@<%= review.author ? review.author.username : "Anonymous"  %></div>
                        <% if (user && review.author && user.equals(review.author)) { %>
                        <div class="form">
                            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                                <button class="btn btn-sm"><i class="fa-solid fa-trash-can"></i></button>
                            </form>
                        </div>
                        <% } %>
                    </div>
                    <div class="card-text px-2">
                        <%= review.comment %> <br>
                        <%= review.rating %>/5 stars <br>
                    </div>
                </div>
                </div>
            <% } %>
       </div>
       </div>

       
       
    </div>


    