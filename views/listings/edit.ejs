<% layout("/layouts/boilerplate.ejs") %>

<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h2>Edit Listing</h2><br>
    
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST"  class="needs-validation" novalidate enctype="multipart/form-data">

        <!-- title -->
        <div class="mb-3">
            <label for="title" class="form-label">Title</label><br>
            <input type="text" name="listing[title]" placeholder="Enter the Title" id="title" class="form-control" value="<%= listing.title %>" required><br>
            <div class="invalid-feedback">Please enter valid title</div>
        </div>

        <!-- description -->
        <div class="mb-3">
            <label for="description" class="form-label">Description</label><br>
            <textarea name="listing[description]" placeholder="Enter the Description" id="description" class="form-control" required><%= listing.description %></textarea><br>
            <div class="invalid-feedback">Please enter valid description</div>
        </div>

        <!-- image -->
        <div class="mb-3">
            <label for="image" class="form-label">Image</label><br>
            <img src="<%= originalImageUrl %>" alt="Image not found!" class="mb-3">

            <input type="file" name="listing[image]" class="form-control" placeholder="Upload Image" id="image" ><br>
            <div class="invalid-feedback">Please enter valid image url</div>
        </div>

        <div class="row">
            <!-- price -->
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label><br>
                <input type="number" name="listing[price]" placeholder="Enter the Price" class="form-control" id="price" value="<%= listing.price %>" required><br>
                <div class="invalid-feedback">Please enter valid price</div>
            </div>

            <!-- country -->
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label><br>
                <input type="text" name="listing[country]" placeholder="Enter the Country" class="form-control" id="country" autocomplete="country" value="<%= listing.country %>" required><br>
                <div class="invalid-feedback">Please enter valid country</div>
            </div>

        </div>
        
        <!-- location -->
        <div class="mb-3">
            <label for="location" class="form-label">Location</label><br>
            <input type="text" name="listing[location]" placeholder="Enter the location" class="form-control" id="location" value="<%= listing.location %>" required><br>
            <div class="invalid-feedback">Please enter valid location</div>
        </div>
        
        <!-- category -->
        <div class="mb-3">
            <label class="form-label">Categories</label><br>
            <div style="display: grid; grid-template-columns: repeat(3, 1fr);">
                <% for(let cat of CATEGORIES) { %>
                    <div class="form-check form-check-inline">
                        <input 
                        type="checkbox" 
                        name="listing[category]" 
                        id="<%= cat %>" 
                        value="<%= cat %>"
                        <%= listing.category && listing.category.includes(cat) ? "checked" : "" %>
                    >
                    <label for="<%= cat %>"><%= cat %></label>
                    </div>
                <% }%>
            </div>
        </div>
        <button type="submit" class="btn btn-dark bnb-btn">Update Listing</button>
    </form>
    </div>
</div>
